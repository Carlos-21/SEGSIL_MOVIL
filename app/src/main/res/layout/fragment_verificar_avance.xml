<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.control.VerificarAvanceFragment">

    <LinearLayout
        android:layout_margin="@dimen/margin_material"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/fragment_verificar_avance_txtCurso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="NOMBRE CURSO"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"/>
            <TextView
                android:id="@+id/fragment_verificar_avance_txtGrupoTipo"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="grupo y tipo"/>
        </LinearLayout>
        <android.support.v7.widget.CardView
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:padding="@dimen/margin5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:layout_height="30dp">
                    <TextView
                        android:gravity="center|left"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Profesor"/>
                    <TextView
                        android:id="@+id/porcentaje_profesor"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="50%"
                        android:layout_marginRight="@dimen/margin5dp"/>
                    <ProgressBar
                        android:id="@+id/progressBar_profesor"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="0dp"
                        android:progress="50"
                        android:layout_height="wrap_content"
                        android:layout_weight="2" />
                </LinearLayout>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="30dp">
                    <TextView
                        android:gravity="center|left"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Alumno"/>
                    <TextView
                        android:id="@+id/porcentaje_delegado"
                        android:gravity="center"
                        android:layout_marginRight="@dimen/margin5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="50%"/>
                    <ProgressBar
                        android:id="@+id/progressBar_delegado"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="0dp"
                        android:progress="50"
                        android:layout_height="wrap_content"
                        android:layout_weight="2" />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <LinearLayout
            android:id="@+id/fragment_verificar_avance_layout_tema1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="gone"
            android:layout_weight="1">
            <include layout="@layout/list_layout"
                android:id="@+id/verificar_avance_checklist1"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/fragment_verificar_avance_layout_tema2"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="gone"
            android:layout_weight="1">
            <include layout="@layout/list_layout"
                android:id="@+id/verificar_avance_checklist2"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin5dp"
            android:text="OBSERVACIONES"
            android:layout_marginLeft="@dimen/margin5dp"
            android:textColor="@color/colorAccent"/>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="@dimen/margin5dp">
            <ScrollView
                android:layout_margin="@dimen/margin5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/fragment_verificar_avance_txtxObservaciones1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/fragment_verificar_avance_txtxObservaciones2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </ScrollView>
        </android.support.v7.widget.CardView>


    </LinearLayout>
</FrameLayout>