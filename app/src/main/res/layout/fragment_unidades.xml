<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.UnidadesFragment"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="UNIDADES"
        android:textSize="@dimen/texto_medio"
        android:gravity="center"
        android:textColor="@color/colorPrimaryDark"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:paddingLeft="@dimen/margin_material"
        android:paddingRight="@dimen/margin_material">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin5dp"
                android:layout_marginRight="@dimen/margin5dp"
                app:cardBackgroundColor="@color/colorAccent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/item_unidad_eap"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="NÂ°"
                        android:gravity="center"
                        android:textColor="@color/colorIcons"/>
                    <TextView
                        android:id="@+id/item_unidad_nombre1"
                        android:layout_width="0dp"
                        android:gravity="center"
                        android:paddingLeft="5dp"
                        android:layout_height="match_parent"
                        android:layout_weight="6"
                        android:textColor="@color/colorIcons"
                        android:text="NOMBRE DE UNIDAD"/>
                    <TextView
                        android:id="@+id/item_unidad_coordinador"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:paddingLeft="5dp"
                        android:layout_height="match_parent"
                        android:text="SEMANAS"
                        android:textColor="@color/colorIcons"
                        android:gravity="center"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/unidades_fragment_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp"/>
                <android.support.design.widget.FloatingActionButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_add"
                    android:id="@+id/unidades_fragment_fab"
                    android:layout_margin="10dp"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>