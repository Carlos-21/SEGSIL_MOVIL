<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.silabus.ActividadesActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/registrar_tema_actividades_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:title="TEMA Y ACTIVIDADES"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/margin_material"
        >
        <android.support.design.widget.TextInputLayout
            android:id="@+id/registrar_tema_actividades_lytNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/TextInputAccent"
            >
            <android.support.design.widget.TextInputEditText
                android:id="@+id/registrar_tema_actividades_edtNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:layout_marginBottom="5dp"
                android:hint="NOMBRE DEL TEMA"
                android:maxLength="40"
                android:inputType="text"
                />
        </android.support.design.widget.TextInputLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/colorAccent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="ACTIVIDADES"
                        android:gravity="center"
                        android:textColor="@color/colorIcons"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="1dp"
                android:background="@drawable/edittext_outline">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/registrar_tema_actividades_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    />
                <android.support.design.widget.FloatingActionButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_add"
                    android:id="@+id/registrar_tema_actividades_fab"
                    android:layout_margin="10dp"/>
            </RelativeLayout>
        </LinearLayout>
        <Button
            android:id="@+id/registrar_tema_actividades_btnGuardar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorIcons"
            android:textSize="20sp"
            android:layout_marginTop="@dimen/layout_margin5dp"
            android:background="@color/colorPrimary"
            android:text="GUARDAR TEMA"/>
    </LinearLayout>
</LinearLayout>