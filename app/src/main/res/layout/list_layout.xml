<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginRight="4dp"
    android:layout_marginLeft="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        app:cardBackgroundColor="@color/colorAccent">
        <TextView
            android:id="@+id/list_txtTema"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NOMBRE TEMA"
            android:textColor="@color/colorIcons"
            android:gravity="center"
            android:padding="2dp"/>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="1dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:text="ACTIVIDAD"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="5dp"
                    android:text="P"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="5dp"
                    android:text="D"/>
            </LinearLayout>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <include layout="@layout/layout_verificar_avance" android:id="@+id/verificar1" android:visibility="gone"/>
                    <include layout="@layout/layout_verificar_avance" android:id="@+id/verificar2" android:visibility="gone"/>
                    <include layout="@layout/layout_verificar_avance" android:id="@+id/verificar3" android:visibility="gone"/>
                    <include layout="@layout/layout_verificar_avance" android:id="@+id/verificar4" android:visibility="gone"/>
                    <include layout="@layout/layout_verificar_avance" android:id="@+id/verificar5" android:visibility="gone"/>
                    <include layout="@layout/layout_verificar_avance" android:id="@+id/verificar6" android:visibility="gone"/>
                    <include layout="@layout/layout_verificar_avance" android:id="@+id/verificar7" android:visibility="gone"/>
                    <include layout="@layout/layout_verificar_avance" android:id="@+id/verificar8" android:visibility="gone"/>
                    <include layout="@layout/layout_verificar_avance" android:id="@+id/verificar9" android:visibility="gone"/>
                    <include layout="@layout/layout_verificar_avance" android:id="@+id/verificar10" android:visibility="gone"/>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>