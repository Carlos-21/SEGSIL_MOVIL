<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.admin.PantallaAdmin">
    <include layout="@layout/toolbar_layout"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorPrimary">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:src="@drawable/logo_segsil"
            android:tint="@color/colorIcons"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SEGSIL"
            android:textColor="@color/colorIcons"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="25dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sistema de Seguimiento de Silabus"
            android:textColor="@color/colorIcons"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_marginBottom="10dp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_Bienvenido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Bienvenido"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginBottom="30dp"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            >

            <Button
                android:id="@+id/btn_usuario"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="USUARIOS"
                android:background="@color/colorPrimaryLight"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_marginBottom="30dp"/>

            <Button
                android:id="@+id/btn_curso"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="CURSOS"
                android:background="@color/colorPrimaryLight"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_marginBottom="30dp"/>

            <Button
                android:id="@+id/btn_grupo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="GRUPOS"
                android:background="@color/colorPrimaryLight"
                android:gravity="center"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>