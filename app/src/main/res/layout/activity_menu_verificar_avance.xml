<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.control.MenuVerificarAvanceActivity">
    <include layout="@layout/toolbar_layout"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin_material"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin5dp"
            android:background="@drawable/fondo_edit_text"
            android:orientation="vertical"
            android:padding="@dimen/margin5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="SS\t\t\t: Ingeniería de Sistemas"
                android:textSize="12sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="SW\t\t\t: Ingeniería de Software"
                android:textSize="12sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="G\t\t\t\t: Número de grupo"
                android:textSize="12sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="T\t\t\t\t: Tipo de Grupo"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin5dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/menu_verificar_avance_layout_seleccionar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/layout_margin5dp"
                    android:layout_marginLeft="@dimen/layout_margin5dp"
                    android:gravity="center_vertical"
                    android:text="Filtro"
                    android:textSize="15sp" />

                <Spinner
                    android:id="@+id/menu_verificar_avance_filtro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/layout_margin5dp"
                    android:drawSelectorOnTop="true"
                    android:entries="@array/filtros" />
            </LinearLayout>
            <AutoCompleteTextView
                android:id="@+id/menu_verificar_avance_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:layout_marginBottom="@dimen/layout_margin5dp"
                android:visibility="gone"
                android:hint="Buscar..."/>
            <Spinner
                android:id="@+id/menu_verificar_avance_eaps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/layout_margin5dp"
                android:drawSelectorOnTop="true"
                android:layout_marginTop="@dimen/layout_margin10dp"
                android:entries="@array/eaps"
                android:visibility="gone" />

            <Spinner
                android:id="@+id/menu_verificar_avance_tipos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/layout_margin5dp"
                android:drawSelectorOnTop="true"
                android:layout_marginTop="@dimen/layout_margin10dp"
                android:entries="@array/tipos"
                android:visibility="gone" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:backgroundTint="@color/colorAccent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="2dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="EAP"
                        android:textColor="@color/colorIcons"
                        android:textSize="@dimen/texto_chico" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="7"
                        android:gravity="center"
                        android:paddingLeft="5dp"
                        android:text="CURSO"
                        android:textColor="@color/colorIcons"
                        android:textSize="@dimen/texto_chico" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingLeft="5dp"
                        android:text="G"
                        android:textColor="@color/colorIcons"
                        android:textSize="@dimen/texto_chico" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingLeft="5dp"
                        android:text="T"
                        android:textColor="@color/colorIcons"
                        android:textSize="@dimen/texto_chico" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/menu_verificar_avance_recycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>