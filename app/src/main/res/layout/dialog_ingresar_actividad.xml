<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:padding="@dimen/margin_material">
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/TextInputPrimary">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/dialog_actividad_edtActividad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ACTIVIDAD"
            android:maxLength="40"
            android:inputType="text"/>

    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <CheckBox
            android:id="@+id/tipo_teoria"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="TEORIA"/>

        <CheckBox
            android:id="@+id/tipo_practica"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="PRACTICA"
            />
        <CheckBox
            android:id="@+id/tipo_laboratorio"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="LABORATORIO"/>

    </LinearLayout>
</LinearLayout>